<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".MainActivity">

            <!-- Circular button in the top right corner -->
            <ImageButton
                android:id="@+id/description"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/iicon"
                android:contentDescription="More info"
                android:textAllCaps="false"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/VendorNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Image in the center -->
            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="190dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:contentDescription="Vendor logo"
                android:padding="14dp"
                android:src="@drawable/vendorlogo" />

            <!-- Buttons in a horizontal LinearLayout -->
            <LinearLayout
                android:id="@+id/linlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp">

                <ImageButton
                    android:id="@+id/facebook_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/fbic"
                    android:contentDescription="Open Facebook" />

                <ImageButton
                    android:id="@+id/insta_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/instic"
                    android:contentDescription="Open Instagram" />

                <ImageButton
                    android:id="@+id/twitter_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/twitic"
                    android:contentDescription="Open Twitter" />

                <ImageButton
                    android:id="@+id/email_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/emic"
                    android:contentDescription="Send Email" />

                <ImageButton
                    android:id="@+id/gallery_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/gaic"
                    android:contentDescription="Open Gallery" />

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner1_meats"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"></Spinner>

            <Spinner
                android:id="@+id/spinner2_dairy"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"></Spinner>

            <Spinner
                android:id="@+id/spinner3_vegetables"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"></Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="#FFFFFF"
                android:elevation="8dp"
                android:paddingTop="-8dp">

                <Button
                    android:id="@+id/backBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    app:icon="@drawable/back_icon"
                    app:iconGravity="textStart" />

                <Button
                    android:id="@+id/home_btn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    app:icon="@drawable/home_icon"
                    app:iconGravity="textStart" />

                <Button
                    android:id="@+id/profileBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    app:icon="@drawable/profile_icon"
                    app:iconGravity="textStart" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>